<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase" Name="PatrolSpotBase" Abstract="True">
        <thingClass>Thek_GuardingPawns.GuardingP_PatrolSpots</thingClass>
        <description>Designate a route for your pawns to patrol at.</description>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <statBases>
          <WorkToBuild>0</WorkToBuild>
        </statBases>
        <rotatable>false</rotatable>
        <scatterableOnMapGen>false</scatterableOnMapGen>
        <useHitPoints>False</useHitPoints>
        <designationCategory>Security</designationCategory>
        <uiOrder>2000</uiOrder>
        <passability>Standable</passability>
        <drawGUIOverlay>true</drawGUIOverlay>
        <drawerType>MapMeshOnly</drawerType>
        <designatorDropdown>GuardingP_PatrolSpots</designatorDropdown>
        <building>
          <sowTag>SupportPlantsOnly</sowTag>
          <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
          <ai_chillDestination>false</ai_chillDestination>
          <wakeDormantPawnsOnConstruction>false</wakeDormantPawnsOnConstruction>
          <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
        </building>
        <placeWorkers>
          <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
        <designationHotKey>Misc12</designationHotKey>
      </ThingDef>

      <ThingDef ParentName="PatrolSpotBase">
        <defName>GuardingP_redPatrol</defName>
        <label>Red patrolling spot</label>
